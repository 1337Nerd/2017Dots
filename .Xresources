!############
!## urxvt  ##
!############


urxvt.internalBorder:				40
urxvt.geometry: 					80x22
urxvt.background:					[100]#1C1C1C
urxvt*scrollBar:                    false
urxvt*cursorBlink:                  true
urxvt*foreground: 		            #c5c8c6
urxvt*cursorColor:		            #c5c8c6
urxvt*cursorUnderline:		        1
URxvt*saveLines:					2048
urxvt.keysym.Control-Up:   			\033[1;5A
urxvt.keysym.Control-Down:    		\033[1;5B
urxvt.keysym.Control-Left:    		\033[1;5D
urxvt.keysym.Control-Right:    		\033[1;5C
urxvt.keysym.Shift-Up: 				command:\033]720;1\007
urxvt.keysym.Shift-Down: 			command:\033]721;1\007
urxvt.letterSpace: 			-6		
urxvt*mouseWheelScrollPage: 		False
urxvt*iso14755: False
xterm*faceName: xft:Iosevka Term Regular:regular:size=11:antilias=true


urxvt*boldFont: xft:Monaco for Powerline:style:bold:size=11

urxvt*font: xft:Iosevka Term Regular:regular:size=11:antilias=true, \
			xft:Hurmit NF:size=11:antilias=true, \
	 	    xft:EmojiOne Color:size=11, \
			xft:Symbola:size=11:antilias=true, \
            xft:unifont:style=Medium:antialias=false


