red    = #FF0086
yellow = #ABA800
green  = #00C918
blue   = #3777E6
white  = #202020

[bar/dracaether]
monitor = LVDS-1
monitor-fallback = eDP-1
override-redirect = false
bottom = false

width = 1292
height = 27
font-0 = "hack:pixelsize=9;2"
font-1 = "fontawesome:pixelsize=9;2"
fixed-center = true

offset-x = 37
offset-y = 37
module-background = ${colors.background}
background = ${colors.background}
foreground = ${colors.foreground}

module-margin = 2
padding       = 2
line-size     = 2

modules-left   = bspwm memory cpu
modules-center = dokuro
modules-right  = weather volume vpncheck wifi date battery

dim-value = 1.0

tray-position = right
tray-detatched = false
tray-transparent = false

wm-restack = bspwm


[global/wm]
margin-bottom = 0
margin-top = 0

[settings]
throttle-output = 5
throttle-output-for = 10
throttle-input-for = 30
screenchange-reload = true


[module/bspwm]
